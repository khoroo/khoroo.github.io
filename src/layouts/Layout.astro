---
import '../styles/global.css';
// import ThemeIcon from '../components/ThemeIcon.astro';

const theme = (() => {
  if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
    return localStorage.getItem('theme');
  }
  if (typeof window !== 'undefined' && window.matchMedia('(prefers-color-scheme: dark)').matches) {
    return 'dark';
  }
  return 'light';
})();

const bodyClass = `min-h-screen w-full max-w-content mx-auto p-4 bg-background text-text dark:bg-dark-bg dark:text-dark-text`;
---

<!DOCTYPE html>
<html lang="en" class:list={[theme === 'dark' ? 'dark' : '', "h-full"]}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Robert Sparks</title>
    <!-- Add your other meta tags, etc. -->
    <script is:inline>
      // This script runs immediately in the head to prevent flash of wrong theme
      (function() {
        // Check localStorage first for user preference
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'dark') {
          document.documentElement.classList.add('dark');
        } else if (savedTheme === 'light') {
          document.documentElement.classList.remove('dark');
        } else {
          // If no preference saved, check system preference
          if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
            document.documentElement.classList.add('dark');
          }
        }
      })();
    </script>
  </head>
  <body class={bodyClass}>
    <div id="app" class="w-full min-h-screen flex flex-col">
      <slot />
    </div>
	<footer class="mt-8 py-4 border-t border-gray-800 text-center dark:border-gray-200">
      <a id="themeToggle" href="javascript:void(0)">toggle dark mode</a>
    </footer>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const themeToggle = document.getElementById('themeToggle');
        if (themeToggle) {
          themeToggle.addEventListener('click', () => {
            if (document.documentElement.classList.contains('dark')) {
              document.documentElement.classList.remove('dark');
              localStorage.setItem('theme', 'light');
            } else {
              document.documentElement.classList.add('dark');
              localStorage.setItem('theme', 'dark');
            }
          });

          if (
            localStorage.getItem('theme') === 'dark' ||
            (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
          ) {
            document.documentElement.classList.add('dark');
          } else {
            document.documentElement.classList.remove('dark');
          }
        }
      });
    </script>
  </body>
</html>
